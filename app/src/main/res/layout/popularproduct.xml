<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/btn_new"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@drawable/roundnew"
        android:text="New"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn_off"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@drawable/roundoff"
        android:text="30% off"
        app:layout_constraintLeft_toRightOf="@id/btn_new"
        android:layout_marginLeft="@dimen/dimen_16"
        />

    <TextView
        android:id="@+id/txt_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_new"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Iphone 8 Plus"
        android:layout_marginTop="@dimen/dimen_16"/>

    <TextView
        android:id="@+id/txt_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_product"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Apple"
        android:layout_marginTop="@dimen/dimen_8"
        />

    <ImageView
        android:id="@+id/rating"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rating"
        app:layout_constraintTop_toBottomOf="@id/txt_apple"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/rating2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rating"
        app:layout_constraintTop_toBottomOf="@id/txt_apple"
        app:layout_constraintLeft_toRightOf="@id/rating"/>

    <ImageView
        android:id="@+id/rating3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rating"
        app:layout_constraintTop_toBottomOf="@id/txt_apple"
        app:layout_constraintLeft_toRightOf="@+id/rating2"/>


    <ImageView
        android:id="@+id/rating4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rating"
        app:layout_constraintLeft_toRightOf="@+id/rating3"
        app:layout_constraintTop_toBottomOf="@id/txt_apple" />

    <ImageView
        android:id="@+id/rating5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/emptyrating"
        app:layout_constraintTop_toBottomOf="@id/txt_apple"
        app:layout_constraintLeft_toRightOf="@id/rating4"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9800000 \n210,000"
        android:layout_marginTop="@dimen/dimen_8"
        app:layout_constraintTop_toBottomOf="@id/rating"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/popularcard"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="@dimen/dimen_8"
        android:elevation="@dimen/dimen_8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
