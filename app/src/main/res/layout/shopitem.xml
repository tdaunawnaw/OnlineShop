<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/dimen_8">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_8"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imagelatest"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_latest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyde Park"
        app:layout_constraintTop_toBottomOf="@+id/imagelatest"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/count_latest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="N2016"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_latest" />

    <TextView
        android:id="@+id/louis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOUIS VUITTON"
        app:layout_constraintTop_toBottomOf="@id/count_latest"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <View
        android:id="@+id/view"
        android:layout_width="250dp"
        android:layout_height="@dimen/dimen_16"
        android:background="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/louis"
        app:layout_constraintLeft_toLeftOf="parent"/>



    <RatingBar
        android:id="@+id/ratin_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="4"
        android:layout_marginTop="@dimen/dimen_8"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@drawable/line"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/dimen_16"
        app:layout_constraintTop_toBottomOf="@id/louis"
        app:layout_constraintLeft_toRightOf="@id/ratin_bar"/>

    <TextView
        android:id="@+id/txtprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999,99999"
        android:layout_marginLeft="@dimen/dimen_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <TextView
        android:id="@+id/strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="239999999"
        android:background="@drawable/stroke"
        app:layout_constraintTop_toBottomOf="@id/txtprice"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dimen_16"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
